{% extends 'base.html.twig' %}

{% block inscription %}

    <div class="container">
        <div class="row">
            <div class="col s12">
                <h1>Inscription :</h1>

                {{ form_start(form) }}

                    <div class="row">
                        <div class="col l6 s12">
                        {{ form_row(form.firstname, {
                            'label': 'Votre prénom'
                        }) }}
                        </div>

                        <div class="col l6 s12">
                        {{ form_row(form.lastname, {
                            'label': 'Votre nom'
                        }) }}
                        </div>

                        {{ form_row(form.email, {
                            'label': 'Votre e-mail'
                        }) }}

                        {{ form_row(form.plainPassword.first, {
                            'label': 'Indiquez un mot de passe'
                        }) }}
                        {{ form_row(form.plainPassword.second, {
                            'label': 'Confirmez votre mot de passe'
                        }) }}
                        <div id="infos" class="col offset-s1 s10">
                            {{ form_row(form.registration, {
                                'label': 'En confirmant mon inscription, j\'accepte que les informations saisies soient exploitées par le musée du Louvre (pour plus d\'informations, veuillez vous diriger vers les Conditions Générales d\'Utilisation du site)'
                            }) }}
                        </div>
                    </div>

                    <div id="registrationButtonWeb" class="row">
                        <div class="col offset-s8 s2">
                            <button class="btn waves-effect waves-light amber darken-2" type="submit" formnovalidate>S'inscrire<i class="material-icons right">send</i></button>
                        </div>
                    </div>

                    <div id="registrationButtonMobile" class="row">
                        <button class="btn waves-effect waves-light amber darken-2" type="submit" formnovalidate>S'inscrire<i class="material-icons right">send</i></button>
                    </div>

                {{ form_end(form) }}

            </div>
        </div>
    </div>

    <br/>
    <br/>

    <div class="container">
        <div class="row">
            <div class="col offset-l2 l8 offset-s2 s8">
                <div class="account">
                    <br/>
                    <hr/>
                    <h4>Déjà un compte sur le site du Louvre ?</h4>
                    <br/>
                    <div class="col l12 s12">
                        <a href="{{ path('connexion') }}"><input type="button" class="btn waves-effect waves-light amber darken-2" value="Connexion"/></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% extends 'base.html.twig' %}

{% block navigation %}
    
    <div class="navbar-fixed">
        <nav class="grey lighten-1">
            <div class="row">
                <div class="col s12">
                    <div class="col offset-s1 s2"><i class="material-icons left">chevron_right</i>Sélection</div>
                    <div class="col offset-s1 s2"><i class="material-icons left">chevron_right</i>Récapitulatif de la commande</div>
                    <div class="col offset-s1 s2">Paiement</div>
                    <div class="col offset-s1 s2">Confirmation</div>
                </div>
            </div>
        </nav>
    </div>
        
{% endblock %}

{% block tarifs %}
   
    <div class="part"> 
        <div class="row">
            <div class="col offset-s1 s10 grey lighten-2 z-depth-5">
                    <h4>Nos tarifs</h4>
                    <br/>                    
                      <table class="centered">
                        <thead>
                          <tr>
                              <th>Enfant</th>
                              <th>Normal</th>
                              <th>Sénior</th>
                              <th>Réduit</th>
                          </tr>
                        </thead>

                        <tbody>
                         <tr>
                            <td>8€</td>
                            <td>16€</td>
                            <td>12€</td>
                            <td>10€</td>
                          </tr>
                          <tr>
                            <td>de 4 ans à 12 ans <br/>(l’entrée est gratuite pour <br/>les enfants de moins de 4 ans)</td>
                            <td>à partirde 12 ans</td>
                            <td>à partir de 60 ans</td>
                            <td>tarif réservé sous certaines conditions <br/>(étudiant, employé du musée, d’un <br/>service du Ministère de la Culture, militaire…)</td>
                          </tr>
                        </tbody>
                      </table>
            </div>
        </div>
    </div>

{% endblock %}

{% block recap %}
    
    <div class="row">
        <div class="col offset-s2">
            <h3>Récapitulatif des commandes</h3>
        </div>
    </div>

    <div class="row">
        <div class="col offset-s2">
            {% for commande in commandes %}
                <p>
                    {{ commande.nom }} - {{ commande.prenom }} - {{ commande.email }} - {{ commande.statut }}
                </p>
                <a href="{{ path('modification', {'id':commande.id}) }}">Modifier la commande</a>
            {% endfor %}
        </div>
    </div>

{% endblock %}
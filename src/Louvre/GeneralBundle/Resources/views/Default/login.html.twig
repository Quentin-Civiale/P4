{% extends 'base.html.twig' %}

{% block tarifs %}

    <div class="part">
        <div class="row">
            <div class="col offset-s1 s10 grey lighten-2 z-depth-5">
                <h4>Nos tarifs</h4>
                <br/>
                <table class="centered">
                    <thead>
                    <tr>
                        <th>Type de visite</th>
                        <th>Enfant</th>
                        <th>Normal</th>
                        <th>Sénior</th>
                        <th>Réduit</th>
                    </tr>
                    </thead>

                    <tbody>
                    <tr>
                        <th>Journée</th>
                        <td>{{ child_price }}€</td>
                        <td>{{ normal_price }}€</td>
                        <td>{{ senior_price }}€</td>
                        <td>{{ reduced_price }}€</td>
                    </tr>
                    <tr>
                        <th>Demi-journée</th>
                        <td>{{ child_price * half_price }}€</td>
                        <td>{{ normal_price * half_price }}€</td>
                        <td>{{ senior_price * half_price }}€</td>
                        <td>{{ reduced_price * half_price }}€</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>{{ children }}<br>(l’entrée est gratuite pour les enfants de moins de 4 ans)</td>
                        <td>{{ adult }}</td>
                        <td>{{ senior }}</td>
                        <td>{{ reduce }}<br>(étudiant, employé du musée, d’un service du Ministère de la Culture, militaire…)</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}

{% block login %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>Connexion à votre compte :</h1>

                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                {{ form_start(form) }}
                    {{ form_row(form._username) }}
                    {{ form_row(form._password) }}

                    <div class="row">
                        <div class="col offset-s8 s2">
                            <button class="btn waves-effect waves-light amber darken-2" type="submit">Connexion<i class="material-icons right">send</i></button>
                        </div>
                    </div>

                {#<div class="newAccount">#}
                    {#<h4>Nouveau sur le site du Louvre ? </h4> <br/>#}
                    {#<button class="btn waves-effect waves-light amber darken-2" type="submit"><a href="{{ path('register') }}">Créer votre compte</a></button> <br/>#}
                    {#<a href="{{ path('register') }}"><input type="button" class="btn waves-effect waves-light amber darken-2" value="Créer votre compte"/></a>#}
                {#</div>#}

                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <br/>
    <br/>

    <div class="container">
        <div class="row">
            <div class="col offset-s2 s8">
                <div class="account">
                    <br/>
                    <hr/>
                    <h4>Nouveau sur le site du Louvre ?</h4>
                    <br/>
                    {#<button class="btn waves-effect waves-light amber darken-2" type="submit"><a href="{{ path('register') }}">Créer votre compte</a></button> <br/>#}
                    <a href="{{ path('register') }}"><input type="button" class="btn waves-effect waves-light amber darken-2" value="Créer votre compte"/></a>
                </div>
            </div>
        </div>
    </div>

    <br/>
{% endblock %}
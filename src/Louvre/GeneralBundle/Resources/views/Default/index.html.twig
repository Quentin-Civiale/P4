{% endblock %}

{% block selection %}

<br/>
   
<div class="part"> 
    <div class="row">
       <div class="col offset-s2 s8 offset-s2 grey lighten-2">
            <h4>1) Choix de la date</h4>
            <hr/><br/>
            <p>Date de la visite</p>
            <div class="col offset-s3 s3 offset-6">
                <input type="date" name="date" />
            </div>
       </div>
       <div class="col offset-s2 s8 offset-s2 grey lighten-2">
            <p>
               Cochez le type de journée voulue :<br /><br/>
               <input type="radio" name="day" id="journée" /> <label for="journée">Journée</label><br />
               <input type="radio" name="day" id="demi" /> <label for="demi">Demi-journée</label><br />
            </p>
       </div>
    </div>
</div>

<br/>

<div class="part">
    <div class="row">
       <div class="col offset-s2 s8 offset-s2 grey lighten-2">
            <h4>2) Nombre de personnes</h4>
            <hr/><br/>
            <div class="col offset-s3 s3 offset-6">
                <input type="number" min="0" />
           </div>
       </div>
       <div class="col offset-s2 s8 offset-s2 grey lighten-2">
            <div class="row">
                <div class="input-field col s6">
                    <label for="prenom">Votre prénom :</label>
                    <input type="text" name="prenom" id="prenom" size="30" maxlength="15" class="validate"/>
                </div>
                <div class="input-field col s6">
                    <label for="nom">Votre nom :</label>
                    <input type="text" name="nom" id="nom" size="30" maxlength="15" />
                </div>
           </div>
           <div class="row">
                <p>Votre date de naissance</p>
                 <input type="date" name="birthdate"/>
           </div>
       </div>
       <div class="col offset-s2 s8 offset-s2 grey lighten-2">
            <div class="row">
                <div class="input-field col s6">
                    <label for="prenom">Votre prénom :</label>
                    <input type="text" name="prenom" id="prenom" size="30" maxlength="15" class="validate"/>
                </div>
                <div class="input-field col s6">
                    <label for="nom">Votre nom :</label>
                    <input type="text" name="nom" id="nom" size="30" maxlength="15" />
                </div>
           </div>
           <div class="row">
                <p>Votre date de naissance</p>
                 <input type="date" name="birthdate"/>
           </div>
       </div>
    </div>
</div>

<br/>

<div class="part">
    <div class="row">
       <div class="col offset-s2 s8 offset-s2 grey lighten-2">
            <h4>3) Coordonnées</h4>
            <hr/><br/>
            <div class="input-field col s6">
                    <label for="prenom">Votre prénom :</label>
                    <input type="text" name="prenom" id="prenom" size="30" maxlength="15" class="validate"/>
                </div>
                <div class="input-field col s6">
                    <label for="nom">Votre nom :</label>
                    <input type="text" name="nom" id="nom" size="30" maxlength="15" />
                </div>
                <label for="email" data-error="wrong" data-success="right">Email</label>
                <input id="email" type="email" class="validate">
       </div>
    </div>
</div>

    <div class="row">
        <div class="col offset-s8 s2 offset-s2">
            <button class="btn waves-effect waves-light" type="submit" name="action">Commander
            <i class="material-icons right">send</i>
            </button>
        </div>
    </div>


{% endblock %}
{% block tarifs %}
   
    <div class="part"> 
        <div class="row">
            <div class="col offset-s1 s10 grey lighten-2 z-depth-5">
                    <h4>Nos tarifs</h4>
                    <br/>                    
                      <table class="centered">
                        <thead>
                          <tr>
                              <th>Enfant</th>
                              <th>Normal</th>
                              <th>Sénior</th>
                              <th>Réduit</th>
                          </tr>
                        </thead>

                        <tbody>
                         <tr>
                            <td>8€</td>
                            <td>16€</td>
                            <td>12€</td>
                            <td>10€</td>
                          </tr>
                          <tr>
                            <td>de 4 ans à 12 ans <br/>(l’entrée est gratuite pour <br/>les enfants de moins de 4 ans)</td>
                            <td>à partirde 12 ans</td>
                            <td>à partir de 60 ans</td>
                            <td>tarif réservé sous présentation d'un justificatif <br/>(étudiant, employé du musée, d’un <br/>service du Ministère de la Culture, militaire…)</td>
                          </tr>
                        </tbody>
                      </table>
            </div>
        </div>
    </div>

{% endblock %}

{% block formulaire %}

<br/>
   
<div class="part"> 
    <div class="row">
       <div class="col offset-s2 s8 grey lighten-2 z-depth-5">
            <h4>1) Choix de la date</h4>
            <hr/><br/>
                <p>Choisissez la date de votre visite au Musée du Louvre</p>
                <div class="input-field col offset-s4 s4">
                    <input type="date" name="date" />
                </div>
                <div class="col offset-s2 s8">
                    <p>
                       Cochez le type de journée voulue :<br /><br/>
                       <input type="radio" name="day" id="journée" /> <label for="journée">Journée (de 9h à 18h)</label><br />
                       <input type="radio" name="day" id="demi" /> <label for="demi">Demi-journée (de 14h à 18h)</label><br />
                    </p>
               </div>
       </div>
    </div>
</div>

<br/>

<div class="part">
    <div class="row">
        <div class="col offset-s2 s8 grey lighten-2 z-depth-5">
            <h4>2) Nombre de personnes</h4>
            <hr/><br/>
                <div class="row">
                    <div class="input-field col offset-s4 s4">
                       <label for="nbBillet">Veuillez indiquer le nombre de billets souhaité</label>
                        <input type="number" id="nbBillet" min="0" max="10"/>
                    </div>
                </div>

                <div class="row">      
                  <br/><hr/>
                   <h5>Billet N°1</h5>
                    <div class="input-field col s6">
                        <label for="prenom">Votre prénom :</label>
                        <input type="text" name="prenom" id="prenom" size="30" maxlength="15" class="validate"/>
                    </div>
                    <div class="input-field col s6">
                        <label for="nom">Votre nom :</label>
                        <input type="text" name="nom" id="nom" size="30" maxlength="15" />
                    </div>
                    <div class="input-field col s6 grey lighten-2">
                        <p>Votre date de naissance</p>
                         <input type="date" name="birthdate"/>
                    </div>
                    <div class="input-field col s6 grey lighten-2">
                        <p>Personne bénéficiant d'un tarif réduit :</p>
                         <input type="checkbox" name="reduit1" class="filled-in checkbox" id="filled-in-box-1" checked="checked" /> <label for="filled-in-box-1">Oui</label><br />
                    </div>
                </div>

